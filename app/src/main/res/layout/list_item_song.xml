<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    android:clipToPadding="false"
    android:background="?attr/selectableItemBackground">

    <!-- 1. Ảnh bìa album (Giữ nguyên) -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_album_art"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
        tools:src="@drawable/ic_logo" />

    <!-- 2. Nhóm chứa các nút Icon (Đây là phần thay đổi lớn) -->
    <LinearLayout
        android:id="@+id/ll_button_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- ▼▼▼ ICON PLAY ĐÃ ĐƯỢC THÊM LẠI ▼▼▼ -->
        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_play_logo"
            app:tint="#FF9800" />

        <!-- ▼▼▼ ICON 3 CHẤM (MORE OPTIONS) ▼▼▼ -->
        <ImageView
            android:id="@+id/iv_more_options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_dot"
            app:tint="?android:attr/textColorSecondary" />

    </LinearLayout>

    <!-- 3. Nhóm chứa tên bài hát và nghệ sĩ (Giữ nguyên nhưng điều chỉnh lại vị trí) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/ll_button_group"
        android:layout_toEndOf="@id/iv_album_art"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Tên bài hát rất rất dài để kiểm tra" />

        <TextView
            android:id="@+id/tv_song_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="16sp"
            tools:text="Tên nghệ sĩ" />

    </LinearLayout>

</RelativeLayout>
