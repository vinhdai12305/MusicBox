<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingBottom="24dp">

    <!-- Phần thông tin bài hát -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="16dp">

        <!-- Ảnh bìa bài hát -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_song_art_bottom_sheet"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            tools:src="@drawable/khong_buong" />

        <!-- Cụm thông tin Tên, Tác giả, Thời lượng -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toStartOf="@id/iv_favorite_icon"
            android:layout_toEndOf="@id/iv_song_art_bottom_sheet"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_song_title_bottom_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Không Buông" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_song_artist_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    tools:text="Hngle, Ari" />

                <!-- Dấu gạch đứng phân cách -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_song_duration_bottom_sheet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    tools:text="03:50 mins" />

            </LinearLayout>

        </LinearLayout>

        <!-- Icon Trái tim -->
        <ImageView
            android:id="@+id/iv_favorite_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="2dp"
            android:src="@drawable/ic_tim_rong"
            app:tint="@color/accent_orange" />

    </RelativeLayout>

    <!-- Đường kẻ ngang phân cách -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:background="#1A000000" />

    <!-- Danh sách các tùy chọn -->
    <ListView
        android:id="@+id/lv_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dp" />

</LinearLayout>
